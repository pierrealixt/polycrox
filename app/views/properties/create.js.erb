
// var options_form_errors = document.getElementsByClassName('form-property-errors')[0];
var property_form_errors = document.getElementById('property_' + <%= @form_prop_id %> + '_form_errors');

<% if @prop.valid? %>
  document.getElementById('form_edit_property_' + <%= @form_prop_id %>).reset();
  prop_value = document.getElementById('item_' + <%= @item.id %> + '_form_prop_' + <%= @form_prop_id %> + '_value');
  
  prop_value.innerHTML = '<%= escape_javascript render("properties/value", item: @item, prop: @prop) %>';  

  textatrea = document.getElementById('niquetamere');
  console.log(textatrea)
  textatrea.innerHTML = '<%= escape_javascript render("form_properties/#{@fp.html}", fp: @fp, item: @item, value: @prop.value) %>';  
  
  if (property_form_errors)
    property_form_errors.innerHTML = '';
  
  select = document.getElementById('prout');
  select.innerHTML = '<%= escape_javascript render("form_properties/options", fp: @fp, item: @item, value: @prop.value) %>';  

<% else %>
  if (property_form_errors)
    property_form_errors.innerHTML = '<%= escape_javascript render("form_properties/error", object: @prop) %>';  
<% end %>


